{
  "hosting": {
    "public": "public_deploy",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/lecture/**",
        "destination": "/lecture/index.html"
      },
      {
        "source": "/audiobook/**",
        "destination": "/audiobook/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}